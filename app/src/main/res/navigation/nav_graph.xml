<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/firstfragment"
    android:id="@+id/nav_graph">
    <!--FirstFragment-->
    <fragment
        android:id="@+id/firstfragment"
        android:name="com.example.apphomenavigation.fragment.FirstFragment"
        android:label="firstfragment"
        tools:layout="@layout/fragment_first" >
        <!--添加动作-->
        <action
            android:id="@+id/action_afragment_to_bfragment"
            app:destination="@id/secondfragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/secondfragment"
        android:name="com.example.apphomenavigation.fragment.SecondFragment"
        android:label="secondfragment"
        tools:layout="@layout/fragment_second" />

    <fragment
        android:id="@+id/thirdfragment"
        android:name="com.example.apphomenavigation.fragment.ThirdFragment"
        android:label="thirdfragment"
        tools:layout="@layout/fragment_third" />

    <fragment
        android:id="@+id/fourthfragment"
        android:name="com.example.apphomenavigation.fragment.FourthFragment"
        android:label="fourthfragment"
        tools:layout="@layout/fragment_fourth" />

    <fragment
        android:id="@+id/fifthfragment"
        android:name="com.example.apphomenavigation.fragment.FifthFragment"
        android:label="fifthfragment"
        tools:layout="@layout/fragment_fifth" />
</navigation>